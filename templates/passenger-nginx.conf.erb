user  nginx;
worker_processes  1;

error_log  logs/error.log warn;
pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    passenger_root <%= @gempath %>/passenger-<%= @version %>;
    passenger_ruby <%= @rvm_prefix %>rvm/wrappers/<%= @ruby_version %>/ruby;
    passenger_max_pool_size <%= @maxpoolsize %>;
    passenger_pool_idle_time <%= @poolidletime %>;
    passenger_max_instances_per_app <%= @maxinstancesperapp %>;
<% if @version >= '3.0.0' %>
    passenger_min_instances <%= @mininstances %>;
    passenger_spawn_method <%= @spawnmethod %>;
<% end %>

    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  logs/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    include conf.d/*.conf;
}

